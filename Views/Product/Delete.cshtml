@model CRUDwdRepository.Core.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] =  "Delete Product ";
}

<form method="post" action="Delete">
    <div class="card">
        <div class="card-header align-content-center fw-bold">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <div class="form-floating mb-2">
                <input asp-for="ProductName" class="form-control" readonly/>
                <label asp-for="ProductName"></label>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Price" class="form-control" readonly />
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Qty" class="form-control" readonly />
                <label asp-for="Qty"></label>
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div>
                
                    <div class="col-lg-12 d-grid">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
               

            </div>
        </div>
    </div>
</form>
